<div class="row">
  <h1>Listing Albums</h1>
  <%= link_to 'New Album', new_album_path, class: "btn btn-primary" %>
</div>

<br>

<div class="row">
  <% @albums.each do |album| %>
      <div class="col-md-3 portfolio-item">
        <%= link_to album_thumbnail(album), album_pictures_path(album) %>
        
        <% if album.title? %>
          <%= album.title %>
        <% end %>
        <br>
        
        <%= link_to 'Edit', edit_album_path(album) %>
        <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>        
      </div>
  <% end %>
</div>

