<div class="page-header">
  <h1>Gallery</h1>
    <% if user_signed_in? %>
      <%= link_to 'New Album', new_album_path, class: "btn btn-primary" %>
    <% end %>
</div>

<br>

<div class="row">
  <% @albums.each do |album| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
         <div class="thumbnail">
        <%= link_to album_thumbnail(album), album_pictures_path(album) %>
        
          <div class="caption">
            <% if album.title? %>
              <h4><%= album.title %></h4>
            <% end %>
          </div>
        

        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_album_path(album), :class => "btn btn-warning btn-xs" %>
          <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %> 
        <% end %>
        </div>
      </div>
  <% end %>
</div>